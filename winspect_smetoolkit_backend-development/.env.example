NOTE: DONT USE EXTRA SPACE IN YOUR .env file.
=================================================
::---START---
PORT=APPLICATION_PORT
NODE_ENV=dev
BASE_PATH=/api/v1

# Slack Configuration (for security monitoring)
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# WinConnect API Token
WINCONNECT_API_TOKEN=WINCONNECT_API_TOKEN

# Application Configuration
HOSTIP=BASEURL_OF_YOUR_APPLICATION

# Database Configuration
DATABASE_HOST=your-database-host.rds.amazonaws.com
DATABASE_NAME=DATABASE_NAME
DATABASE_USER_NAME=DATABSE_USER
DATABASE_PASSWORD=DATABASE_PASSWORD

# JWT Configuration
JWT_SECRET_ACCESS_TOKEN=YOUR_SECRET_KEY
JWT_SECRET_REFRESH_TOKEN=YOUR_REFRESH_SECRET_KEY
JWT_EXPIRES_ACCESS_TOKEN=7d
JWT_EXPIRES_REFRESH_TOKEN=30d

# AWS Configuration (if using AWS services directly)
AWS_ACCESS_KEY_ID=YOUR_AWS_ACCESS_KEY_ID
AWS_SECRET_ACCESS_KEY=YOUR_AWS_SECRET_ACCESS_KEY

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001


